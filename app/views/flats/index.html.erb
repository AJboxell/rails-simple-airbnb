<h2>All of our flats:</h2>
<div class="cards">
<% @flats.each do |flat| %>
  <div class="card">
    <div class="main">
      <h3><%= flat.name %></h3>
      <p><%= flat.address %></p>
      <p><i class="fas fa-users"></i><%= flat.number_of_guests %><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %>
    </div>
    <div class="footer">
      <%= link_to 'More info', flat_path(flat) %>
      <%= link_to 'Edit', edit_flat_path(flat) %>
      <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
</div>
